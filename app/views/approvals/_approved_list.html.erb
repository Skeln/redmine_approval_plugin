<% if @project.module_enabled?(:approval_plugin)%>

  <% if changeset.approved? %>

    <%= l(:approved_message_list, :name => changeset.approver, :date => changeset.approve_date) %>

  <% else %>
    <span style="color: <%= Setting.plugin_approval_plugin['unapproved_color'] %>"><%= l(:not_approved) %></span>
  <% end %>

<% end %>
